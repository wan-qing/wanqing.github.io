<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hellojava.dao.RolesDao">

    <resultMap id="BaseResultMap" type="com.hellojava.entity.Roles">
        <!--@Table roles-->
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="roleName" column="role_name" jdbcType="VARCHAR"/>
        <result property="jurisdiction" column="jurisdiction" jdbcType="INTEGER"/>
        <result property="yuliu" column="yuliu" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          role_id, role_name, jurisdiction, yuliu
        from yiwu.roles
        where role_id = #{roleId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          role_id, role_name, jurisdiction, yuliu
        from yiwu.roles
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          role_id, role_name, jurisdiction, yuliu
        from yiwu.roles
        <where>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="roleName != null and roleName != ''">
                and role_name = #{roleName}
            </if>
            <if test="jurisdiction != null">
                and jurisdiction = #{jurisdiction}
            </if>
            <if test="yuliu != null and yuliu != ''">
                and yuliu = #{yuliu}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="roleId" useGeneratedKeys="true">
        insert into yiwu.roles(role_name, jurisdiction, yuliu)
        values (#{roleName}, #{jurisdiction}, #{yuliu})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update yiwu.roles
        <set>
            <if test="roleName != null and roleName != ''">
                role_name = #{roleName},
            </if>
            <if test="jurisdiction != null">
                jurisdiction = #{jurisdiction},
            </if>
            <if test="yuliu != null and yuliu != ''">
                yuliu = #{yuliu},
            </if>
        </set>
        where role_id = #{roleId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from yiwu.roles where role_id = #{roleId}
    </delete>

</mapper>