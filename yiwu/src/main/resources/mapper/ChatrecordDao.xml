<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hellojava.dao.ChatrecordDao">

    <resultMap id="BaseResultMap" type="com.hellojava.entity.Chatrecord">
        <!--@Table chatrecord-->
        <result property="chatId" column="chat_id" jdbcType="INTEGER"/>
        <result property="sendId" column="send_id" jdbcType="INTEGER"/>
        <result property="copyId" column="copy_id" jdbcType="INTEGER"/>
        <result property="sendinfo" column="sendinfo" jdbcType="VARCHAR"/>
        <result property="sendtime" column="sendtime" jdbcType="TIMESTAMP"/>
        <result property="yuliu" column="yuliu" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          chat_id, send_id, copy_id, sendinfo, sendtime, yuliu
        from yiwu.chatrecord
        where chat_id = #{chatId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          chat_id, send_id, copy_id, sendinfo, sendtime, yuliu
        from yiwu.chatrecord
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          chat_id, send_id, copy_id, sendinfo, sendtime, yuliu
        from yiwu.chatrecord
        <where>
            <if test="chatId != null">
                and chat_id = #{chatId}
            </if>
            <if test="sendId != null">
                and send_id = #{sendId}
            </if>
            <if test="copyId != null">
                and copy_id = #{copyId}
            </if>
            <if test="sendinfo != null and sendinfo != ''">
                and sendinfo = #{sendinfo}
            </if>
            <if test="sendtime != null">
                and sendtime = #{sendtime}
            </if>
            <if test="yuliu != null and yuliu != ''">
                and yuliu = #{yuliu}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="chatId" useGeneratedKeys="true">
        insert into yiwu.chatrecord(send_id, copy_id, sendinfo, sendtime, yuliu)
        values (#{sendId}, #{copyId}, #{sendinfo}, #{sendtime}, #{yuliu})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update yiwu.chatrecord
        <set>
            <if test="sendId != null">
                send_id = #{sendId},
            </if>
            <if test="copyId != null">
                copy_id = #{copyId},
            </if>
            <if test="sendinfo != null and sendinfo != ''">
                sendinfo = #{sendinfo},
            </if>
            <if test="sendtime != null">
                sendtime = #{sendtime},
            </if>
            <if test="yuliu != null and yuliu != ''">
                yuliu = #{yuliu},
            </if>
        </set>
        where chat_id = #{chatId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from yiwu.chatrecord where chat_id = #{chatId}
    </delete>

</mapper>