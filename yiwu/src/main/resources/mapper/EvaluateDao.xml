<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hellojava.dao.EvaluateDao">

    <resultMap id="BaseResultMap" type="com.hellojava.entity.Evaluate">
        <!--@Table evaluate-->
        <result property="evaluateId" column="evaluate_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="goodsId" column="goods_id" jdbcType="INTEGER"/>
        <result property="evaluateContent" column="evaluate_content" jdbcType="VARCHAR"/>
        <result property="evaluateTime" column="evaluate_time" jdbcType="TIMESTAMP"/>
        <result property="yuliu" column="yuliu" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          evaluate_id, user_id, goods_id, evaluate_content, evaluate_time, yuliu
        from yiwu.evaluate
        where evaluate_id = #{evaluateId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          evaluate_id, user_id, goods_id, evaluate_content, evaluate_time, yuliu
        from yiwu.evaluate
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          evaluate_id, user_id, goods_id, evaluate_content, evaluate_time, yuliu
        from yiwu.evaluate
        <where>
            <if test="evaluateId != null">
                and evaluate_id = #{evaluateId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="goodsId != null">
                and goods_id = #{goodsId}
            </if>
            <if test="evaluateContent != null and evaluateContent != ''">
                and evaluate_content = #{evaluateContent}
            </if>
            <if test="evaluateTime != null">
                and evaluate_time = #{evaluateTime}
            </if>
            <if test="yuliu != null and yuliu != ''">
                and yuliu = #{yuliu}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="evaluateId" useGeneratedKeys="true">
        insert into yiwu.evaluate(user_id, goods_id, evaluate_content, evaluate_time, yuliu)
        values (#{userId}, #{goodsId}, #{evaluateContent}, #{evaluateTime}, #{yuliu})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update yiwu.evaluate
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="goodsId != null">
                goods_id = #{goodsId},
            </if>
            <if test="evaluateContent != null and evaluateContent != ''">
                evaluate_content = #{evaluateContent},
            </if>
            <if test="evaluateTime != null">
                evaluate_time = #{evaluateTime},
            </if>
            <if test="yuliu != null and yuliu != ''">
                yuliu = #{yuliu},
            </if>
        </set>
        where evaluate_id = #{evaluateId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from yiwu.evaluate where evaluate_id = #{evaluateId}
    </delete>

</mapper>