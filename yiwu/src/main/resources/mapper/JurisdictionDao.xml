<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hellojava.dao.JurisdictionDao">

    <resultMap id="BaseResultMap" type="com.hellojava.entity.Jurisdiction">
        <!--@Table jurisdiction-->
        <result property="jurisdictionId" column="jurisdiction_id" jdbcType="INTEGER"/>
        <result property="functionname" column="functionname" jdbcType="VARCHAR"/>
        <result property="yuliu" column="yuliu" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          jurisdiction_id, functionname, yuliu
        from yiwu.jurisdiction
        where jurisdiction_id = #{jurisdictionId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          jurisdiction_id, functionname, yuliu
        from yiwu.jurisdiction
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          jurisdiction_id, functionname, yuliu
        from yiwu.jurisdiction
        <where>
            <if test="jurisdictionId != null">
                and jurisdiction_id = #{jurisdictionId}
            </if>
            <if test="functionname != null and functionname != ''">
                and functionname = #{functionname}
            </if>
            <if test="yuliu != null and yuliu != ''">
                and yuliu = #{yuliu}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="jurisdictionId" useGeneratedKeys="true">
        insert into yiwu.jurisdiction(functionname, yuliu)
        values (#{functionname}, #{yuliu})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update yiwu.jurisdiction
        <set>
            <if test="functionname != null and functionname != ''">
                functionname = #{functionname},
            </if>
            <if test="yuliu != null and yuliu != ''">
                yuliu = #{yuliu},
            </if>
        </set>
        where jurisdiction_id = #{jurisdictionId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from yiwu.jurisdiction where jurisdiction_id = #{jurisdictionId}
    </delete>

</mapper>