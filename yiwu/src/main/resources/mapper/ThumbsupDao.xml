<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hellojava.dao.ThumbsupDao">

    <resultMap id="BaseResultMap" type="com.hellojava.entity.Thumbsup">
        <!--@Table thumbsup-->
        <result property="giveId" column="give_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="buserId" column="buser_id" jdbcType="INTEGER"/>
        <result property="topCreatetime" column="top_createtime" jdbcType="TIMESTAMP"/>
        <result property="yuliu" column="yuliu" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          give_id, user_id, buser_id, top_createtime, yuliu
        from yiwu.thumbsup
        where give_id = #{giveId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          give_id, user_id, buser_id, top_createtime, yuliu
        from yiwu.thumbsup
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          give_id, user_id, buser_id, top_createtime, yuliu
        from yiwu.thumbsup
        <where>
            <if test="giveId != null">
                and give_id = #{giveId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="buserId != null">
                and buser_id = #{buserId}
            </if>
            <if test="topCreatetime != null">
                and top_createtime = #{topCreatetime}
            </if>
            <if test="yuliu != null and yuliu != ''">
                and yuliu = #{yuliu}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="giveId" useGeneratedKeys="true">
        insert into yiwu.thumbsup(user_id, buser_id, top_createtime, yuliu)
        values (#{userId}, #{buserId}, #{topCreatetime}, #{yuliu})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update yiwu.thumbsup
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="buserId != null">
                buser_id = #{buserId},
            </if>
            <if test="topCreatetime != null">
                top_createtime = #{topCreatetime},
            </if>
            <if test="yuliu != null and yuliu != ''">
                yuliu = #{yuliu},
            </if>
        </set>
        where give_id = #{giveId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from yiwu.thumbsup where give_id = #{giveId}
    </delete>

</mapper>