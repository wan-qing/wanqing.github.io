<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hellojava.dao.FollowandfansDao">

    <resultMap id="BaseResultMap" type="com.hellojava.entity.Followandfans">
        <!--@Table followandfans-->
        <result property="fafId" column="faf_id" jdbcType="INTEGER"/>
        <result property="followId" column="follow_id" jdbcType="INTEGER"/>
        <result property="fansId" column="fans_id" jdbcType="INTEGER"/>
        <result property="followtime" column="followtime" jdbcType="TIMESTAMP"/>
        <result property="yuliu" column="yuliu" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          faf_id, follow_id, fans_id, followtime, yuliu
        from yiwu.followandfans
        where faf_id = #{fafId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          faf_id, follow_id, fans_id, followtime, yuliu
        from yiwu.followandfans
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          faf_id, follow_id, fans_id, followtime, yuliu
        from yiwu.followandfans
        <where>
            <if test="fafId != null">
                and faf_id = #{fafId}
            </if>
            <if test="followId != null">
                and follow_id = #{followId}
            </if>
            <if test="fansId != null">
                and fans_id = #{fansId}
            </if>
            <if test="followtime != null">
                and followtime = #{followtime}
            </if>
            <if test="yuliu != null and yuliu != ''">
                and yuliu = #{yuliu}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="fafId" useGeneratedKeys="true">
        insert into yiwu.followandfans(follow_id, fans_id, followtime, yuliu)
        values (#{followId}, #{fansId}, #{followtime}, #{yuliu})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update yiwu.followandfans
        <set>
            <if test="followId != null">
                follow_id = #{followId},
            </if>
            <if test="fansId != null">
                fans_id = #{fansId},
            </if>
            <if test="followtime != null">
                followtime = #{followtime},
            </if>
            <if test="yuliu != null and yuliu != ''">
                yuliu = #{yuliu},
            </if>
        </set>
        where faf_id = #{fafId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from yiwu.followandfans where faf_id = #{fafId}
    </delete>

</mapper>